<% form_for @video do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <label for="upload_button">File</label>
    <span id="upload_button" class="panda_upload_button"></span>      
    <input type="text" id="upload_filename"  class="panda_upload_filename" disabled="true" />
    <div id="upload_progress"  class="panda_upload_progress" ></div>
  </p>

  <p>
    <input type="hidden" name="video[panda_video_id]" id="returned_video_id" value="" />
    <input type="submit" value="Upload video" id="submit_button" />
  </p>
<% end %>


<script>

<% auth_params = PANDA.signed_params('post', "/videos.json") %>
$("#returned_video_id").pandaUploader(<%= auth_params.to_json %>, {
  upload_button_id: "upload_button",
  upload_progress_id: "upload_progress",
  upload_filename_id: "upload_filename",
  api_url:"<%= PANDA.api_url %>",
})

</script>